@page
@model MathFlow.Pages.IndexModel
@{
    ViewData["Title"] = "Home";
}

<div class="text-center">
    <h1 class="display-4">Welcome to MathFlow</h1>
    <p class="lead">Your mathematical document processing platform</p>
</div>

<div class="row mt-5">
    <div class="col-md-4">
        <div class="card h-100">
            <div class="card-body">
                <h5 class="card-title">üîê Secure Authentication</h5>
                <p class="card-text">Advanced identity management with role-based access control and optional two-factor authentication.</p>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card h-100">
            <div class="card-body">
                <h5 class="card-title">üìÑ Document Processing</h5>
                <p class="card-text">Convert and process mathematical documents with ease using our powerful conversion tools.</p>
                <a asp-page="/Converters/Converter" class="btn btn-primary">Try Converter</a>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card h-100">
            <div class="card-body">
                <h5 class="card-title">üìä Observability</h5>
                <p class="card-text">Enterprise-grade monitoring with OpenTelemetry, Prometheus, and Grafana integration.</p>
            </div>
        </div>
    </div>
</div>

@if (!User.Identity?.IsAuthenticated ?? true)
{
    <div class="row mt-5">
        <div class="col-md-12 text-center">
            <h3>Get Started</h3>
            <p>Create an account or sign in to access all features</p>
            <a asp-page="/Account/Register" class="btn btn-primary btn-lg me-2">Register</a>
            <a asp-page="/Account/Login" class="btn btn-outline-primary btn-lg">Login</a>
        </div>
    </div>
}
else
{
    <div class="row mt-5">
        <div class="col-md-12 text-center">
            <h3>Welcome back, @User.Identity?.Name!</h3>
            <p>You are logged in as: <strong>@string.Join(", ", User.Claims.Where(c => c.Type == System.Security.Claims.ClaimTypes.Role).Select(c => c.Value))</strong></p>
            <a asp-page="/Identity/Manage/Index" class="btn btn-primary me-2">Manage Profile</a>
            @if (User.IsInRole("admin") || User.IsInRole("masterAdmin"))
            {
                <a asp-page="/Admin/Users/Index" class="btn btn-outline-primary">Admin Panel</a>
            }
        </div>
    </div>
}
