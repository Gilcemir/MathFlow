@page
@model MathFlow.Pages.Identity.Manage.TwoFactorAuthenticationModel
@{
    ViewData["Title"] = "Two-Factor Authentication";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <h2>@ViewData["Title"]</h2>
            
            @if (TempData["StatusMessage"] != null)
            {
                <div class="alert alert-info alert-dismissible fade show" role="alert">
                    @TempData["StatusMessage"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }

            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Two-Factor Authentication Status</h5>
                    
                    @if (Model.TwoFactorEnabled)
                    {
                        <div class="alert alert-success" role="alert">
                            <strong>Two-Factor Authentication is enabled.</strong>
                            <p class="mb-0">Your account is protected with an additional layer of security.</p>
                        </div>

                        @if (Model.IsMasterAdmin)
                        {
                            <div class="alert alert-warning" role="alert">
                                <strong>Master Admin Protection</strong>
                                <p class="mb-0">As a master admin, you cannot disable two-factor authentication.</p>
                            </div>
                        }
                        else
                        {
                            <form method="post" asp-page-handler="Disable">
                                <div class="alert alert-warning" role="alert">
                                    <strong>Warning:</strong> Disabling two-factor authentication will make your account less secure.
                                </div>
                                <button type="submit" class="btn btn-danger">Disable Two-Factor Authentication</button>
                            </form>
                        }
                    }
                    else
                    {
                        @if (!Model.ShowSetup)
                        {
                            <div class="alert alert-warning" role="alert">
                                <strong>Two-Factor Authentication is disabled.</strong>
                                <p class="mb-0">Your account security could be improved by enabling 2FA.</p>
                            </div>

                            <p>Two-factor authentication adds an extra layer of security to your account. You'll need an authenticator app like Google Authenticator, Microsoft Authenticator, or Authy.</p>

                            <div class="d-grid">
                                <a asp-page="./TwoFactorAuthentication" asp-route-showSetup="true" class="btn btn-primary">Enable Two-Factor Authentication</a>
                            </div>
                        }
                        else
                        {
                            <div class="alert alert-info" role="alert">
                                <strong>Set up Two-Factor Authentication</strong>
                                <p class="mb-0">Follow the steps below to enable 2FA on your account.</p>
                            </div>

                            <h5 class="mt-4">Step 1: Install an Authenticator App</h5>
                            <p>Download and install one of these apps on your mobile device:</p>
                            <ul>
                                <li>Google Authenticator (iOS/Android)</li>
                                <li>Microsoft Authenticator (iOS/Android)</li>
                                <li>Authy (iOS/Android)</li>
                            </ul>

                            <h5 class="mt-4">Step 2: Scan the QR Code</h5>
                            <p>Open your authenticator app and scan this QR code:</p>
                            
                            <div class="text-center my-4">
                                <img src="https://api.qrserver.com/v1/create-qr-code/?size=200x200&data=@Model.QrCodeUri" 
                                     alt="QR Code for 2FA setup" 
                                     class="img-fluid border p-2" 
                                     style="max-width: 200px;" />
                            </div>

                            <div class="alert alert-secondary" role="alert">
                                <strong>Can't scan the QR code?</strong>
                                <p class="mb-0">Manually enter this key in your authenticator app:</p>
                                <code class="d-block mt-2">@Model.AuthenticatorKey</code>
                            </div>

                            <h5 class="mt-4">Step 3: Verify the Code</h5>
                            <p>Enter the 6-digit code from your authenticator app to complete the setup:</p>

                            <form method="post" asp-page-handler="Enable">
                                <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>
                                
                                <div class="mb-3">
                                    <label asp-for="Input.Code" class="form-label">Verification Code</label>
                                    <input asp-for="Input.Code" class="form-control" maxlength="6" 
                                           inputmode="numeric" placeholder="000000" autofocus />
                                    <span asp-validation-for="Input.Code" class="text-danger"></span>
                                    <small class="form-text text-muted">
                                        Enter the 6-digit code from your authenticator app.
                                    </small>
                                </div>

                                <div class="d-grid gap-2">
                                    <button type="submit" class="btn btn-success">Enable 2FA</button>
                                    <a asp-page="./TwoFactorAuthentication" class="btn btn-secondary">Cancel</a>
                                </div>
                            </form>
                        }
                    }

                    <hr />

                    <div class="d-grid">
                        <a asp-page="./Index" class="btn btn-secondary">Back to Profile</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
